<?xml version="1.0"?>
<bindings id="pffAddonMenuitemBindings"
   xmlns="http://www.mozilla.org/xbl"
   xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
   xmlns:xbl="http://www.mozilla.org/xbl">

  <binding id="pffAddonBody">
    <content>
        <xul:listcell flex="1" crop="end" class="addonName" xbl:inherits="label=name" />
        <xul:listcell flex="1" crop="end" class="addonAuth" xbl:inherits="label=author" />
    </content>
    
  </binding>
  
  <binding id="performancing-navbar-tab">
    <content>
        <xul:box onclick="performancingUI.onLeftSidebarTabSelect(this);" class="performancing-navbuttons-small" align="center" pack="center" xbl:inherits="name,addon,value,selected" >
            <xul:label value="" crop="end" xbl:inherits="value" class="performancing-navbuttons-small-label" />
        </xul:box>
    </content>
    
  </binding>
  
  <binding id="performancing-navbar-tab-addon">
    <content>
        <xul:box onclick="performancingUI.onLeftSidebarTabSelect(this);" class="performancing-navbuttons-small-addon" align="center" pack="center" xbl:inherits="name,addon,value,selected" >
            <xul:label value="" crop="end" xbl:inherits="value" class="performancing-navbuttons-small-addon-label" />
        </xul:box>
    </content>
    
  </binding>
  
</bindings>
